              <br>
              <ul class="nav nav-list" style="padding-top:10px">
                <li><a href="http://www.loria.fr">LORIA</a></li>
              </ul>
      
              <!-- calendar -->
              <br>
              <br>
              <br>
              <div id="detcal"></div>
              <script>
                  $("#detcal").eventCalendar({
                    eventsjson: 'http://deeploria.gforge.inria.fr/event.humanDate.json.php',
                    jsonDateFormat: 'human',  // 'YYYY-MM-DD HH:MM:SS'
                    eventsScrollable: true,
                    showDescription: true
                  });
              </script>
          </div>

        </div>
        <!--End of body content-->

        <footer id="footer">
            ${content_footer}
            ${template_hooks['page_footer']()}
        </footer>
    </div>
</div>

${base.late_load_js()}
    <script>$('a.image-reference:not(.islink) img:not(.islink)').parent().colorbox({rel:"gal",maxWidth:"100%",maxHeight:"100%",scalePhotos:true});</script>
    <!-- fancy dates -->
    <script>
    moment.locale("${momentjs_locales[lang]}");
    fancydates(${date_fanciness}, ${js_date_format});
    </script>
    <!-- end fancy dates -->
    <%block name="extra_js"></%block>
    % if annotations and post and not post.meta('noannotations'):
        ${notes.code()}
    % elif not annotations and post and post.meta('annotations'):
        ${notes.code()}
    % endif
${body_end}
${template_hooks['body_end']()}
</body>
</html>
